<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.0" type="plugin" group="vmpayment" method="upgrade">
    <name>Concord</name>
    <creationDate>05-Jan-2019</creationDate>
    <author>Concord</author>
    <authorEmail>support@concord.ua</authorEmail>
    <authorUrl>https://pay.concord.ua</authorUrl>
    <copyright>Copyright Concord</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>3.0</version>
    <element>Concord</element>
    <description><![CDATA[<h2>Virtuemart 3 Plugin for Concord Pay</h2> ]]>
    </description>
    <languages folder="languages">
        <language tag="en-GB" client="administrator">en-GB.plg_vmpayment_concord.ini</language>
        <language tag="ru-RU" client="administrator">ru-RU.plg_vmpayment_concord.ini</language>
    </languages>
    <scriptfile>script.php</scriptfile>
    <files>
        <filename plugin="concord">concord.php</filename>
        <filename>index.html</filename>
    </files>
	<vmconfig>
        <fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/vmpayment/concord/fields">
				<field name="gateway_url" class="required" type="text" size="50" default="https://pay.concord.ua/api"
						   label="VMPAYMENT_CONCORD_GATEWAY_URL" description="VMPAYMENT_CONCORD_GATEWAY_URL_DESC"/>
				<field type="text" class="required" name="key" size="50" default=""
					   label="VMPAYMENT_CONCORD_KEY" description="VMPAYMENT_CONCORD_KEY_DESC"/>
				<field type="text"  class="required" name="password" size="50" default=""
					   label="VMPAYMENT_CONCORD_PASSWORD" description="VMPAYMENT_CONCORD_PASSWORD_DESC"/>
			</fieldset>
        </fields>
    </vmconfig>
</extension>